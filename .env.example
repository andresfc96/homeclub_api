# =============================================
# Configuración de Bases de Datos (MySQL)
# =============================================

# Base de datos principal (Apartamentos, Reservas, Pagos)
DATABASE_URL_DB1="mysql://root:root@localhost:3308/homeclub_main"

# Base de datos de propiedades (Descripciones e imágenes)
DATABASE_URL_DB2="mysql://root:root@localhost:3309/homeclub_properties"

# Base de datos de usuarios (Clientes y autenticación)
DATABASE_URL_DB3="mysql://root:root@localhost:3310/homeclub_users"


# =============================================
# Configuración de Autenticación JWT
# =============================================

# Clave secreta para firmar tokens (¡Cambiar en producción!)
JWT_SECRET="SECRET"

# Tiempo de expiración de tokens (ej: 1h, 7d, 30m)
JWT_EXPIRATION_TIME="1h"


# =============================================
# Configuración del Servidor
# =============================================

# Puerto de la aplicación (default: 3000)
PORT="3000"
